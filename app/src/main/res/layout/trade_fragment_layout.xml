<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#D3AF30"
        android:layout_height="48dp">
        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:text="巴蜀银10KG（BAG10kg）"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/down_title"
            android:textSize="16sp"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <RelativeLayout
        android:background="@color/status_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/user_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_margin="20dp"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/user_name"
            android:layout_toRightOf="@id/user_img"
            android:text="昵称：哈哈"
            android:textColor="@color/text_gray_color"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/yue_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/user_img"
            android:textColor="@color/text_gray_color"
            android:layout_marginTop="60dp"
            android:text="余额:"/>
        <TextView
            android:id="@+id/yue_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/yue_txt"
            android:textColor="@color/app_red"
            android:layout_marginTop="60dp"
            android:text="￥8888"/>
        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_circle_yellow_shape"
            android:drawableLeft="@mipmap/get_money"
            android:id="@+id/send_money"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingRight="10dp"
            android:paddingTop="@dimen/margin_5dp"
            android:paddingBottom="@dimen/margin_5dp"
            android:drawablePadding="@dimen/margin_5dp"
            android:layout_marginTop="40dp"
            android:text="充"/>
        <TextView
            android:background="@drawable/rect_circle_yellow_shape"
            android:id="@+id/get_money"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="@dimen/margin_5dp"
            android:paddingBottom="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:layout_marginTop="40dp"
            android:drawablePadding="@dimen/margin_5dp"
            android:layout_toLeftOf="@+id/send_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/get_money"
            android:text="提"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/status_color"
        android:layout_marginTop="1dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:drawableRight="@mipmap/down_title"
                android:background="@drawable/rect_circle_red_shape"
                android:drawablePadding="10dp"
                android:textSize="24sp"
                android:paddingTop="10dp"
                android:paddingLeft="40dp"
                android:paddingBottom="10dp"
                android:paddingRight="40dp"
                android:text="买入"
                />
            <TextView
                android:text="最高：2965"
                android:textColor="@color/text_gray_color"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:drawableRight="@mipmap/up_title"
                android:background="@drawable/rect_circle_yellow_shape"
                android:drawablePadding="10dp"
                android:textSize="24sp"
                android:paddingTop="10dp"
                android:paddingLeft="40dp"
                android:paddingBottom="10dp"
                android:paddingRight="40dp"
                android:text="卖出"
                />
            <TextView
                android:text="最低：2965"
                android:textColor="@color/text_gray_color"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/trade_item_layout"></include>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
