<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/app_yellow">
        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="用户注册"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_size" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:padding="20dp"
        android:textSize="30sp"
        android:text="用户约定书"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/margin_right_dp"
        android:layout_marginRight="@dimen/margin_right_dp"
        android:background="@drawable/rect_circle_white_shape"
        android:text="@string/text_info"
        android:padding="10dp"
        android:textSize="@dimen/title_size"
        android:textColor="@android:color/black"
        android:layout_height="150dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/rect_circle_white_shape"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/margin_right_dp"
        android:layout_marginLeft="@dimen/margin_right_dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/title_size"
        android:text="特别提醒"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/rect_circle_white_shape"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/margin_right_dp"
        android:layout_marginLeft="@dimen/margin_right_dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/title_size"
        android:text="入市协议"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/rect_circle_white_shape"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/margin_right_dp"
        android:layout_marginLeft="@dimen/margin_right_dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/title_size"
        android:text="风险揭示书"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/margin_right_dp"
        android:layout_marginLeft="@dimen/margin_right_dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/check_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/more_selector"
            />
        <TextView
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_min_content_size"
            android:text="我已认真阅读，并完全理解和接受各项条款内容"/>
    </LinearLayout>

    <TextView
        android:id="@+id/agree_and_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_yellow"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginRight="@dimen/margin_right_dp"
        android:layout_marginLeft="@dimen/margin_right_dp"
        android:layout_marginTop="20dp"
        android:text="同意并继续"/>

</LinearLayout>
