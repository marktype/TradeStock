<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/app_yellow">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="用户注册"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_size" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:text="用户约定书"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scrollbars="none"
        android:layout_marginLeft="@dimen/margin_right_dp"
        android:layout_marginRight="@dimen/margin_right_dp">

        <TextView
            android:id="@+id/content_txt"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/rect_circle_white_shape"
            android:padding="10dp"
            android:text="@string/text_info"
            android:textColor="@android:color/black"
            android:textSize="@dimen/title_size" />
    </ScrollView>

    <TextView
        android:id="@+id/special_reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_right_dp"
        android:layout_marginRight="@dimen/margin_right_dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rect_circle_white_shape"
        android:gravity="center"
        android:padding="10dp"
        android:text="特别提醒"
        android:textColor="@android:color/black"
        android:textSize="@dimen/title_size" />

    <TextView
        android:id="@+id/go_into_xieyi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_right_dp"
        android:layout_marginRight="@dimen/margin_right_dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rect_circle_white_shape"
        android:gravity="center"
        android:padding="10dp"
        android:text="入市协议"
        android:textColor="@android:color/black"
        android:textSize="@dimen/title_size" />

    <TextView
        android:id="@+id/fengxian_jieshishu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_right_dp"
        android:layout_marginRight="@dimen/margin_right_dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rect_circle_white_shape"
        android:gravity="center"
        android:padding="10dp"
        android:text="风险揭示书"
        android:textColor="@android:color/black"
        android:textSize="@dimen/title_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_right_dp"
        android:layout_marginRight="@dimen/margin_right_dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <CheckBox
            android:id="@+id/check_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/more_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:text="我已认真阅读，并完全理解和接受各项条款内容"
            android:textSize="@dimen/text_min_content_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/agree_and_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_right_dp"
        android:layout_marginRight="@dimen/margin_right_dp"
        android:layout_marginTop="20dp"
        android:background="@color/app_yellow"
        android:gravity="center"
        android:padding="10dp"
        android:text="同意并继续" />

</LinearLayout>
