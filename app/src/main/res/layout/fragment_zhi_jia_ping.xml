<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/status_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_num"
            android:layout_width="0dp"
            android:textSize="@dimen/text_min_content_size"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/text_gray_color"
            android:padding="10dp"
            android:text="持仓单号"/>
        <TextView
            android:id="@+id/goods_name"
            android:layout_width="0dp"
            android:textSize="@dimen/text_min_content_size"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="@color/text_gray_color"
            android:text="商品名称"/>
        <TextView
            android:id="@+id/buy_or_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_min_content_size"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="@color/text_gray_color"
            android:text="买/卖"/>
        <TextView
            android:id="@+id/goods_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/text_min_content_size"
            android:padding="10dp"
            android:textColor="@color/text_gray_color"
            android:text="建仓量"/>
    </LinearLayout>

    <com.administrator.tradestock.customview.NoscrollListView
        android:id="@+id/remove_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/txt_no_data"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:text="暂无数据"
        android:textSize="20sp"
        android:visibility="gone"
        android:gravity="center"/>

</LinearLayout>
