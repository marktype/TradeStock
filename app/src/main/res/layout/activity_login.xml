<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:authcodeview="http://schemas.android.com/apk/res-auto"
    android:background="#303030"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/app_yellow"
        android:layout_height="48dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_size"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:text="用户登录"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:text="巴蜀商品交易中心"
        android:gravity="center"
        android:textSize="28sp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/app_yellow"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/yonghuming"/>
        <EditText
            android:id="@+id/user_phone"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:hint="用户名/手机号"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/mima"/>
        <EditText
            android:id="@+id/user_password"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:hint="密码"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@android:color/darker_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/head_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/yanzhengma"/>
        <EditText
            android:id="@+id/verify_num"
            android:layout_toLeftOf="@+id/AuthCodeView"
            android:layout_toRightOf="@+id/head_img"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:hint="验证码"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:layout_height="wrap_content" />
        <!--<TextView-->
            <!--android:id="@+id/yanzhengma"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="1324"-->
            <!--android:textSize="@dimen/title_size"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:padding="5dp"-->
            <!--android:textColor="@android:color/white"-->
            <!--android:background="@color/app_yellow"/>-->
        <com.administrator.tradestock.customview.AuthCodeView
            android:id="@+id/AuthCodeView"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            authcodeview:titleText="3712"
            authcodeview:titleTextColor="@color/app_yellow"
            authcodeview:titleTextSize="35sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:id="@+id/login_btn"
        android:padding="15dp"
        android:textSize="@dimen/title_max_size"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/white"
        android:background="@color/app_yellow"
        android:gravity="center"/>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="@dimen/text_content_size"
            android:id="@+id/register_btn"
            android:textColor="@android:color/white"
            android:padding="15dp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/forget_password_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:gravity="end"
            android:textSize="@dimen/text_content_size"
            android:textColor="@android:color/darker_gray"
            android:padding="10dp"
            android:layout_weight="1"
            />
    </LinearLayout>


</LinearLayout>
